{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles. Default ordering desc on created_at column. Includes a comment count.",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves all comments associated to an article id ordered by data, newest first.",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 5,
          "body": "A string",
          "article_id": 1,
          "author": "A string",
          "votes": 0,
          "created_at": "2020-11-03T21:00:00.000Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "allows existing user to post a new comment to an article based on the article_id.",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "username": "A string",
          "body": "A string"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "Add or subtract votes to the vote property of an article based on its ID.",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 10,
          "comment_count": 6
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Delete comment by comment_id.",
    "queries": [],
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "Retrieves all users from the database.",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "username": "MalcolmMethane",
          "name": "Malcolm Murphy",
          "avatar_url": "https://avatars2.githubusercontent.com/u/24604688?s=460&v=4"
        }
      ]
    }
  }
}
